<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/circle_background"
            android:elevation="6dp"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add_goal"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_add_goal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_goal"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="add goal"
            android:textColor="@color/dark_turquoise"
            app:layout_constraintEnd_toStartOf="@+id/btn_options"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/dark_turquoise" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_options"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/dark_turquoise"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="0dp"
            app:icon="@drawable/ic_info"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add_goal"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_add_goal"
            app:strokeColor="@color/black" />

        <com.dev.in.drogon.custom_widget.CircularIndicator
            android:id="@+id/circular_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="40dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_goal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo_setup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:background="@drawable/circle_background"
            android:elevation="6dp"
            android:paddingStart="5dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="@id/circular_indicator"
            app:layout_constraintEnd_toEndOf="@id/circular_indicator"
            app:layout_constraintStart_toStartOf="@id/circular_indicator"
            app:layout_constraintTop_toTopOf="@id/circular_indicator" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/eina01_regular"
            android:text="Set up Autopay to start"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/circular_indicator"
            app:layout_constraintStart_toStartOf="@+id/circular_indicator"
            app:layout_constraintTop_toBottomOf="@+id/circular_indicator" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="continue"
            android:textColor="@color/dark_turquoise"
            app:layout_constraintEnd_toEndOf="@+id/circular_indicator"
            app:layout_constraintStart_toStartOf="@+id/circular_indicator"
            app:layout_constraintTop_toBottomOf="@id/materialTextView"
            app:strokeColor="@color/dark_turquoise" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>