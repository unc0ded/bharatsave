<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/rounded_top_both_rect_12dp"
    tools:context=".view.register.OtpBottomSheetFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Otp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/enter_otp_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/subtitle_grey"
            android:inputType="phone"
            android:hint="Otp" />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:layout_marginTop="20dp"
            android:text="Verify"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sending you a SMS for verification"
            android:textColor="@color/subtitle_grey"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>