<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_home">

    <action
        android:id="@+id/action_logout"
        app:destination="@id/registrationActivity" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.dev.in.drogon.view.main.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/nav_learn"
        android:name="com.dev.in.drogon.view.main.learn.LearnFragment"
        android:label="fragment_learn"
        tools:layout="@layout/fragment_learn" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.dev.in.drogon.view.main.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <activity
        android:id="@+id/registrationActivity"
        android:name="com.dev.in.drogon.view.register.RegistrationActivity"
        android:label="activity_registration"
        tools:layout="@layout/activity_registration" />

</navigation>